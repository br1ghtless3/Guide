<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuizAct"
        android:orientation="vertical"
        android:background="@drawable/background4">

    <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_back_white_10"
            android:elevation="1dp"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="1/10"
            android:textColor="#CC000000"
            android:textSize="18sp"
            android:textStyle="normal" />

    <TextView
            android:id="@+id/quis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_back_light"
            android:gravity="center"
            android:minHeight="100dp"
            android:padding="20dp"
            android:text="В одном из приведённых ниже слов допущена ошибка в постановке ударения: НЕВЕРНО выделена буква, обозначающая ударный гласный звук. Найдите это слово."
            android:textColor="#CC000000"
            android:textSize="20sp"
            android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/oneotvet"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backround_otvet"
            android:text="ненАдолго"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="#CC000000" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/twootvet"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backround_otvet"
            android:text="Иксы"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="#CC000000" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/threeotvet"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backround_otvet"
            android:text="вручИт"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="#CC000000" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/foureotvet"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backround_otvet"
            android:text="снятА"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="#CC000000" />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fiveotvet"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backround_otvet"
            android:text="понялА"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="#CC000000" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextbtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/round_back_light"
            android:text="Дальше"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#CC000000" />
</LinearLayout>