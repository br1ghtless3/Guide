<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/info"
        android:orientation="vertical"
        tools:context=".InfoAboutMe">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

        <ImageView
                android:id="@+id/backbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/strelka" />

        <TextView
                android:id="@+id/nametopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:text="Информация о разработчике"
                android:textColor="#CC000000"
                android:textSize="23sp"
                android:textStyle="normal" />

    </RelativeLayout>

    <TextView
            android:id="@+id/infoaboutme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:minHeight="100dp"
            android:padding="20dp"
            android:text="Приветствую! Меня зовут Дарья, учусь в 10 Инженерном классе. Считаю, что каждому немобходимо хорошо подготовиться к экзаменам, и надеюсь, что это приложение вам поможет!"
            android:textColor="#CC000000"
            android:textSize="22sp"
            android:textStyle="normal" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:src="@drawable/iconforme"
            />

</LinearLayout>

