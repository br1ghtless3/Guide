<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/info"
        android:orientation="vertical"
        tools:context=".Pravila">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="121dp">

        <ImageView
                android:id="@+id/backbtn1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:src="@drawable/strelka" />

        <TextView
                android:id="@+id/nametopic1"
                android:layout_width="358dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="80dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="0dp"
                android:text="Правила при выполении тестов"
                android:textColor="#CC000000"
                android:textSize="25sp"
                android:textStyle="normal" />

    </RelativeLayout>

    <TextView
            android:id="@+id/infoaboutme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="Во время прохождения тестов производится подсчет правильных и не правильных ответов. После прохождения теста будет показан результат прохождения в зависимости от количества верных ответов, будут показаны разные экраны.
После прохождения теста можно будет пройти его еще ни один раз, но предыдущий результат не будет сохранен."
            android:textColor="#CC000000"
            android:textSize="22sp"
            android:textStyle="normal" />


</LinearLayout>